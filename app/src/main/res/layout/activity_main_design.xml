<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/view_pager"
            android:foregroundGravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            tools:ignore="MissingConstraints,NotSibling">
        </android.support.v4.view.ViewPager>

        <android.support.design.widget.TabLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            app:tabBackground="@drawable/indicator_selector"
            app:tabGravity="center"
            android:layout_marginTop="20dp"
            app:tabIndicatorHeight="0dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categories"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp" />
    <TextView
        android:id="@+id/see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp" />
    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/recycler_view"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/categories"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="150dp">-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/categories"
        android:layout_marginLeft="20dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:padding="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="18dp"
                android:src="@drawable/home_category_fruits">
            </ImageView>

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="95dp"
                android:layout_height="34dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                android:padding="8dp"
                android:stepSize="0.1"
                android:theme="@style/RatingBar"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="52dp"
                android:text="Fruits"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rating" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <!--</android.support.v7.widget.RecyclerView>-->

    <TextView
        android:id="@+id/featured_products"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/featured_products"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/card_view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="145dp"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/featured_products"
        android:layout_marginLeft="20dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/market"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="@id/con"
                android:layout_marginStart="8dp"
                android:src="@drawable/cart_select1"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:src="@drawable/like"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="61dp"
                android:layout_height="57dp"
                android:padding="0dp"
                android:src="@drawable/apple"
                android:layout_marginStart="45dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="45dp"
                app:layout_constraintTop_toTopOf="@id/con"
                android:layout_marginTop="23dp">
            </ImageView>

            <RatingBar
                android:id="@+id/rating2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="95dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="25dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                android:padding="8dp"
                android:stepSize="0.1"
                android:theme="@style/RatingBar"
                app:layout_constraintBottom_toTopOf="@+id/name2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image2"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="10dp"
                android:text="Apple"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rating2" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginEnd="10dp"
                android:text="3$"
                android:textSize="15sp"
                android:textColor="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rating2"
                android:layout_marginRight="10dp" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>