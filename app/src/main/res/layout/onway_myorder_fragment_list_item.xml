<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/border">



    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/onway_icon_img"
        android:src="@drawable/onway_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/onway_icon_img"
        app:layout_constraintStart_toEndOf="@id/onway_icon_img"
        android:layout_marginStart="15dp"
        android:text="@string/order_number_value"
        android:id="@+id/order_number_txtV"
        android:textColor="@color/black"
        android:textSize="14sp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/order_number_txtV"
        app:layout_constraintStart_toEndOf="@id/onway_icon_img"
        android:layout_marginStart="15dp"
        android:text="@string/order_time_value"
        android:id="@+id/order_time_txtV"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/order_time_txtV"
        app:layout_constraintStart_toEndOf="@id/onway_icon_img"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/onway_tab"
        android:id="@+id/onway"
        android:textColor="@color/bgreen"
        android:textSize="14sp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/notification_time"
        android:id="@+id/onway_time_txtV"
        />



</android.support.constraint.ConstraintLayout>