<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.CategoriesItems.Checkout2Activity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/serviceProvider_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/item_name_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/checkout"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/back_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="8dp"
                android:background="@drawable/back"
                android:scaleType="fitXY"
                tools:ignore="RtlCompat" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/app_bar"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        android:background="@drawable/border"
        android:id="@+id/frame1_root"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/delivery_date"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:text="@string/delivery_date_value_txV"
            android:id="@+id/delivery_date_value_txV"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/side_arrow"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/delivery_date_arrow_img"/>

    </FrameLayout>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/frame1_root"
        app:layout_constraintEnd_toEndOf="@id/frame1_root"
        app:layout_constraintTop_toBottomOf="@+id/frame1_root"
        android:background="@drawable/border"
        android:id="@+id/frame2_root"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/payment_method"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:id="@+id/payment_method_value_txtV"
            android:text="@string/payment_method_value"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/side_arrow"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/payment_method_arrow_img"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frame2_root"
        app:layout_constraintStart_toStartOf="@id/frame2_root"
        android:textSize="20dp"
        android:text="@string/order"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:id="@+id/order"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/app_bar"
        app:layout_constraintTop_toBottomOf="@+id/order"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/price_value_txV"
        android:layout_marginTop="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recycler_order"
        app:layout_constraintStart_toStartOf="@id/recycler_order"
        android:text="@string/price"
        android:layout_marginTop="10dp"
        android:id="@+id/price"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recycler_order"
        app:layout_constraintEnd_toEndOf="@id/recycler_order"
        android:text="@string/item_price"
        android:textColor="@color/bgreen"
        android:layout_marginTop="10dp"
        android:id="@+id/price_value_txV"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/recycler_order"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:text="@string/delivery_free"
        android:layout_marginTop="5dp"
        android:id="@+id/delivery_free"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/recycler_order"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:text="@string/delivery_free_value"
        android:layout_marginTop="5dp"
        android:id="@+id/delivery_free_value_txV"
        android:textColor="@color/bgreen"/>


    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_discount"
        app:layout_constraintStart_toStartOf="@id/recycler_order"
        app:layout_constraintTop_toBottomOf="@id/delivery_free"
        android:id="@+id/add_discount_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delivery_free"
        android:text="@string/add_discount_code"
       app:layout_constraintTop_toTopOf="@id/add_discount_img"
        app:layout_constraintBottom_toBottomOf="@id/add_discount_img"
        app:layout_constraintStart_toEndOf="@id/add_discount_img"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_discount_img"
        app:layout_constraintStart_toStartOf="@id/recycler_order"
        android:text="@string/discount"
        android:id="@+id/discount"
        android:layout_marginTop="5dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_discount_img"
        app:layout_constraintEnd_toEndOf="@id/recycler_order"
        android:text="@string/discount_value"
        android:id="@+id/discount_value_txtV"
        android:layout_marginTop="5dp"
        android:textColor="@color/bgreen"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="@id/recycler_order"
        app:layout_constraintStart_toStartOf="@id/recycler_order"
        app:layout_constraintTop_toBottomOf="@+id/discount"
        app:layout_constraintBottom_toTopOf="@+id/total_price"
        android:id="@+id/view"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/recycler_order"
        android:text="@string/total_price"
        android:id="@+id/total_price"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/recycler_order"
        android:text="@string/total_price_value"
        android:id="@+id/total_price_value_txtV"
        android:layout_marginTop="15dp"
        android:textColor="@color/bgreen"
        />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/recycler_order"
        app:layout_constraintEnd_toEndOf="@id/recycler_order"
        app:layout_constraintTop_toBottomOf="@id/total_price"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="@string/confirm_order"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/confirm_order_btn"
        />

















</android.support.constraint.ConstraintLayout>