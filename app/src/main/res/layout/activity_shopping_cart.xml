<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/root"
    tools:context=".Main.CategoriesItems.ShoppingCartActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/serviceProvider_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">


            <TextView
                android:id="@+id/item_name_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/shopping_cart"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/back_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="8dp"
                android:background="@drawable/back"
                android:scaleType="fitXY"
                tools:ignore="RtlCompat" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_cart_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/app_bar"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        app:layout_constraintBottom_toTopOf="@+id/constraint_root"
        android:layout_marginTop="15dp"/>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@id/shopping_cart_recycler"
        app:layout_constraintStart_toStartOf="@id/shopping_cart_recycler"
        app:layout_constraintTop_toBottomOf="@id/shopping_cart_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/constraint_root">

    <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

             />

        <TextView
            android:id="@+id/delivery_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/delivery_free"
            app:layout_constraintStart_toStartOf="@id/price"
            app:layout_constraintTop_toBottomOf="@id/price"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/total_price"
           app:layout_constraintTop_toBottomOf="@id/delivery_free"
            app:layout_constraintStart_toStartOf="@id/price"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/total_price_value_txV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_price"
            android:textColor="@color/bgreen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/delivery_free_value_txV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery_free_value"
            android:textColor="@color/bgreen"
           app:layout_constraintTop_toBottomOf="@id/total_price_value_txV"
            app:layout_constraintEnd_toEndOf="@id/total_price_value_txV"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/price_value_txV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price_value"
            android:textColor="@color/bgreen"
           app:layout_constraintTop_toBottomOf="@id/delivery_free_value_txV"
            app:layout_constraintEnd_toEndOf="@id/total_price_value_txV"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/checkout_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="@string/checkout"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_value_txV" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>