<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="3dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/item_imageV_id"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_mango"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/wishlist_cart_img_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:padding="3dp"
            android:src="@drawable/cart_not_select"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/wishlist_selected_img_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/wishlist_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/wishlist_cart_img_id" />

        <TextView
            android:id="@+id/wishlist_item_name_txtV_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="is simply dummy text of the printing and typesetting industry."
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/wishlist_item_price_txtV_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_imageV_id" />

        <TextView
            android:id="@+id/wishlist_item_price_txtV_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="3sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="3$"
            android:textColor="@color/bgreen"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/wishlist_item_name_txtV_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/wishlist_item_name_txtV_id" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>